<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_author_cover"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="2dp"
        app:cardCornerRadius="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_author_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/iv_action_share"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_message_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_message_time"
        app:srcCompat="@drawable/ic_action_arrow" />

    <TextView
        android:id="@+id/tv_name"
        fontPath="fonts/fzltdb.ttf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:singleLine="true"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toStartOf="@+id/iv_action_share"
        app:layout_constraintStart_toEndOf="@+id/cardView_author_cover"
        app:layout_constraintTop_toTopOf="@+id/cardView_author_cover"
        tools:ignore="MissingPrefix"
        tools:text="官方通知" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        tools:text="1周前"
        android:textColor="@color/colorGray"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name"
        app:layout_constraintStart_toStartOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/view_cutline"
        app:layout_constraintEnd_toEndOf="@+id/iv_action_share"
        app:layout_constraintStart_toStartOf="@+id/tv_message_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_message_time"
        tools:text="世界杯最佳观看按时发的大数据发给大家按时发啊的设计风格就会大商股份就打算飞机撒旦换个房间打扫法国军队萨格房间号多少按附件哈德公司法几点睡啊房价还是大幅简化士大夫公交卡点三公分" />

    <View
        android:id="@+id/view_cutline"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/slowGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_description" />





</android.support.constraint.ConstraintLayout>